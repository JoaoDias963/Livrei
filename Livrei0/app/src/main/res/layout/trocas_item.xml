<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20sp">

    <ImageView
        android:layout_width="70sp"
        android:layout_height="110sp"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        android:id="@+id/imgTroca"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20sp">

        <TextView
            android:id="@+id/Chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10sp"
            android:text="Clique para iniciar a conversa"

            />

        <TextView
            android:id="@+id/TrocaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10sp"
            android:text="Nome do usuÃ¡rio"

            />

       <TextView
            android:id="@+id/StatusTroca"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="10sp"></TextView>

            <!-- android:text="Status da Troca" -->/>

        <TextView
            android:id="@+id/idTroca"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="10sp"></TextView>
           <!-- android:text="Id troca" -->/>

    </LinearLayout>



</LinearLayout>